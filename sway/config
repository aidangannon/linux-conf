set $mod Mod4

set $term alacritty
set $menu wofi --show drun

output * bg /home/aidan/Downloads/photo-1548337138-e87d889cc369.jpeg fill

font pango:UbuntuMono Nerd Font, Noto Color Emoji 11

default_border none
default_floating_border none

gaps inner 10
gaps outer 5

for_window [window_role="pop-up"] floating enable
for_window [window_role="popup_menu"] floating enable
for_window [window_role="notification"] floating enable
for_window [window_role="dialog"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [app_id="xdg-desktop-portal-gtk"] floating enable
for_window [app_id="^$"] floating enable, move position 1540 35
for_window [app_id="google-chrome" floating] floating enable
for_window [app_id="google-chrome" title="^(?!.*Google Chrome$).*$"] floating enable
for_window [app_id="google-chrome"] floating enable, resize set width 400 height 300
for_window [app_id="google-chrome" title=".*Google Chrome$"] floating disable
for_window [app_id="google-chrome" window_role="pop-up"] floating enable
for_window [app_id="chromium" floating] floating enable
for_window [title="Save File"] floating enable
for_window [title="Open File"] floating enable

input type:keyboard {
    xkb_layout "gb"
}

mode "resize" {
    bindsym Left resize shrink width 4ppt
    bindsym Down resize grow height 4ppt
    bindsym Up resize shrink height 4ppt
    bindsym Right resize grow width 4ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode "tmux-like" {
    bindsym Shift+5 splith; exec $term
    bindsym Shift+2 splitv; exec $term

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+c reload

bindsym $mod+r mode "resize"

bindsym $mod+b mode "tmux-like"

bindsym $mod+Return exec $term
bindsym $mod+d exec $menu
bindsym $mod+Shift+q kill
bindsym $mod+Shift+e exit

bindsym $mod+Left focus left
bindsym $mod+Right focus right
bindsym $mod+Up focus up
bindsym $mod+Down focus down

bindsym $mod+1 workspace number 1; mode "default";
bindsym $mod+2 workspace number 2; mode "default";
bindsym $mod+3 workspace number 3; mode "default";
bindsym $mod+4 workspace number 4; mode "default";
bindsym $mod+5 workspace number 5; mode "default";

bindsym $mod+Shift+5 splith
bindsym $mod+Shift+2 splitv

bindsym $mod+Escape exec gtklock

bindsym XF86AudioRaiseVolume exec wpctl set-volume --limit 1.0 @DEFAULT_AUDIO_SINK@ 5%+
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

exec wl-paste --watch cliphist store
bindsym $mod+v exec cliphist list | wofi --dmenu | cliphist decode | wl-copy && wtype -M ctrl -M shift v -m shift -m ctrl

bindsym $mod+q exec sway-easyfocus

exec swayidle -w \
    timeout 300 'gtklock' \
    timeout 600 'swaymsg "output * power off"' \
    resume 'swaymsg "output * power on"' \
    before-sleep 'gtklock'

exec waybar
